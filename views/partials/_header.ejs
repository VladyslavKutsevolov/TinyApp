<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse m-auto" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(!username) { %>
    <form class="form-inline my-2 my-lg-0" action="/login" method="POST" name="username">
      <input class="form-control mr-sm-2" name="username" type="text" placeholder="Username">
      <button class="btn btn-primary" type="submit">Login</button>
    </form>
    <% } else { %>
    <form class="form-inline my-2 my-lg-0" action="/logout" method="POST" name="username">
      <span class="mr-3">Logged In As: <%= username %></span>
      <button class="btn btn-primary" type="submit">Logout</button>
    </form>
    <% } %>
    </div>
  </nav>
</header>